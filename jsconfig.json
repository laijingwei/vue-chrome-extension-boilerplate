{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "static",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "static"
  ]
}
